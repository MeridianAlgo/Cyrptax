# Crypto Tax Tool Environment Variables
# Copy this file to .env and fill in your API keys (optional)

# Blockchain API Keys (optional - for direct blockchain import)
ETHERSCAN_API_KEY=your_etherscan_api_key_here
BITCOIN_API_KEY=your_bitcoin_api_key_here

# Price API Keys (optional - for enhanced price data)
COINGECKO_API_KEY=your_coingecko_api_key_here

# Web Interface Settings
FLASK_SECRET_KEY=your_secret_key_here
WEB_HOST=0.0.0.0
WEB_PORT=5000

# Security Settings
PRIVACY_MODE=ENABLED
LOCAL_PROCESSING_ONLY=TRUE
